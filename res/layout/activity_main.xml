<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/ibstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ibplay"
        android:layout_alignParentBottom="true"
        android:src="@drawable/buttonstop" />

    <ImageButton
        android:id="@+id/ibplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ibstop"
        android:layout_centerHorizontal="true"
        android:src="@drawable/buttonplay" />

    <ImageButton
        android:id="@+id/ibpause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ibplay"
        android:layout_alignLeft="@+id/ibplay"
        android:src="@drawable/buttonpause" />

    <ImageButton
        android:id="@+id/ibnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibpause"
        android:layout_toRightOf="@+id/ibplay"
        android:src="@drawable/buttonnext" />

    <ImageButton
        android:id="@+id/ibprev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibpause"
        android:layout_toLeftOf="@+id/ibplay"
        android:src="@drawable/buttonprev" />


    <ImageButton
        android:id="@+id/ibfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ibprev"
        android:layout_toLeftOf="@+id/ibprev"
        android:src="@drawable/buttonfav"
         />

    <ToggleButton
        android:id="@+id/tbrepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ibstop"
        android:layout_toRightOf="@+id/ibnext"
         />

    <ImageView
        android:id="@+id/ivalbumart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ibpause"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/app_name" />

</RelativeLayout>
